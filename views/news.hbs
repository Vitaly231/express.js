<h1>Добавленные сериалы</h1>

{{#if serials.length}}

        <div class="container marketing">
            <div class="row">
        {{#each serials}}
                <div class="col-lg-4">
                    <div class="row">
                        <img class="bd-placeholder-img rounded-circle" width="140" height="140" src="{{img}}"
                             alt="{{title}}"  focusable="false" role="img"
                             ><title>{{title}}</title>

                    </div>
                    <h2>{{title}}</h2>
                    <p class="voice_acting">{{voice_acting}}</p>
                    <p><a class="btn btn-secondary" href="/news/{{_id}}" role="button">Открыть фильм</a></p>

                    {{#if @root.isAuth}}
                        {{#ifeq userId._id @root.userId}}
                            <p><a class="btn btn-secondary" href="/news/{{_id}}/edit?allow=true" role="button">Редактировать
                                фильм</a></p>
                        {{/ifeq}}
                        <form action="/card/add" method="post">
                            <input type="hidden" name="id" value="{{_id}}">
                            <input type="hidden" name="_csrf" value="{{@root.csrf}}">

                            <button type="submit" class="btn btn-secondary" type="submit">Купить</button>
                        </form>
                    {{/if}}
                </div>
        {{/each}}
            </div>
        </div>

{{else}}
    <p>Добавленных сериалов пока нет</p>
{{/if}}


