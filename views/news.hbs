<h1>Добавленные сериалы</h1>

{{#if serials.length}}
    {{#each serials}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-image">
                        <img src="{{img}}" alt="{{title}}">
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p class="voice_acting">{{voice_acting}}</p>
                    </div>
                    <div class="card-action actions">
                        <a href="/news/{{_id}}" target="_blank">Открыть сериал</a>
                        {{#if @root.isAuth}}
                            {{#ifeq userId._id @root.userId}}
                                <a href="/news/{{_id}}/edit?allow=true">Редактирование</a>
                            {{/ifeq}}
                            <form action="/card/add" method="post">
                                <input type="hidden" name="id" value="{{_id}}">
                                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                                <button type="submit" class="btn btn-primary" type="submit">Купить</button>
                            </form>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Добавленных сериалов пока нет</p>
{{/if}}